---
import Header from "../../components/generalmath/Header.astro";
import NavBar from "../../components/generalmath/NavBar.astro";
---
<html lang="en" dir="ltr">
    <!-- Meta/Info Attributes -->
    <Header stylesheet="./settings.css" />
    <body>
        <!--- Sidebar / Navigation Bar-->
        <NavBar />
        <div class="settings_content">
            <div>
                <h1>Appearance</h1>
                <h2>Themes</h2>
                <button onclick="savePallet('background/#3D3A50;sidebarcolor1/#303041;sidebarcolor2/#0EA2F6;textcolor/#F4FCFE;')">Default</button>
                <button onclick="savePallet('background/#FFFFFF;sidebarcolor1/#FFFFFF;sidebarcolor2/#000000;textcolor/#000000;')">White</button>
                <button onclick="savePallet('background/#101010;sidebarcolor1/#000000;sidebarcolor2/#89CFF0;textcolor/#89CFF0;')">Black</button>
            <div>
            <hr>
            <h2>TAB CLOAKER</h2>
            <a>Put image URL or text into bar</a> 
            <div> 
            <input list="cloak" style="border: 4px;" id="icotitlechange" value=""><br>
            <datalist id="cloak">
                <option value="General Mathematics">General Math Title</option>
                <option value="./img/icons/math.ico">General Math Icon</option>
                <option value="Edpuzzle">Edpuzzle Title</option>
                <option value="https://edpuzzle.imgix.net/favicons/favicon-32.png">Edpuzzle</option>
                <option value="Classes">Classroom Title</option>
                <option value="https://ssl.gstatic.com/classroom/favicon.png">Classroom Icon</option>
                <option value="Nearpod">Nearpod Title</option>
                <option value="https://cdn.nearpod.com/favicon.ico">Nearpod Icon</option>
                <option value="Canvas">Canvas Title</option>
                <option value="https://du11hjcvx0uqb.cloudfront.net/dist/images/favicon-e10d657a73.ico">Canvas Icon</option>
                <option value="Khan Acadamy">Khan Title</option>
                <option value="https://www.khanacademy.org/favicon.ico?logo">Khan Icon</option>
            </datalist>
            <button style="width:100px;height: 50px;" type="button" onclick="setTitle(document.getElementById('icotitlechange').value); parent.location.reload()">Title</button>
            <button style="width:100px;height: 50px;" type="button" onclick="setIcon(document.getElementById('icotitlechange').value); parent.location.reload()">Icon</button>
            <div>
        <hr>
            </div>
        </div>

        <!-- Scripts -->
        <script is:inline src="./scripts/index.js"></script>
        <script is:inline src="./scripts/settings.js"></script>
        <script is:nline src="./nohist/index.js"></script>
    </body>
</html>

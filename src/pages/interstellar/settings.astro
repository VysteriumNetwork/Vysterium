<br/>
<p>Select the button down below to cloak this site.</p>
<br/>
<br/>
<div>
<h2>Tab Cloaking</h2>
<!--<select id="tab-cloak" class="bg-gray-900 w-48 p-2 rounded-md text-white">
<option value="false">Disabled</option>
<option value="true">Enabled</option>
</select>-->
<button id="tabcloak" class="bg-gray-900 w-48 p-2 rounded-md text-white tab-cloak">Enable</button>
</div>
<br>
<br>
<div>
<h2>Themes</h2>
  <br>
<select id="Themes" class="bg-gray-900 w-48 p-2 rounded-md text-white">
<option class="option" value="Classic">Default</option>
<option class="option" value="Midnight">Midnight</option>
<option class="option" value="Ocean">Ocean</option>
<option class="option" value="Light">Light</option>

</select>
<!--<select id="Transitions" class="bg-gray-900 w-48 p-2 rounded-md text-white">
<option value="on">on</option>
<option value="off">off</option>
</select>-->
</div>
<div>
<script is:inline src="/interstellar/assets/js/particles.js"></script>
<script is:inline src="/interstellar/assets/js/settings/settings.js"></script>
<script is:inline src="/interstellar/assets/js/settings/themes.js"></script>
<script is:inline>
if (localStorage.getItem('cloak')) {
  const cloakValue = localStorage.getItem('cloak') === 'true' ? 'true' : 'false';
  document.getElementById('tab-cloak').value = cloakValue;
}
document.getElementById('tab-cloak').addEventListener('change', function() {
  localStorage.setItem('cloak', this.value === 'true' ? 'true' : 'false');
});
</script>
      <script is:inline>
if (localStorage.getItem('Transitions')) {
  const cloakValue = localStorage.getItem('Transitions') === 'true' ? 'true' : 'false';
  document.getElementById('tab-cloak').value = cloakValue;
}
document.getElementById('Transitions').addEventListener('change', function() {
  localStorage.setItem('Transitions', this.value === 'true' ? 'true' : 'false');
});
</script>
</div>
  
</body>
</html>
